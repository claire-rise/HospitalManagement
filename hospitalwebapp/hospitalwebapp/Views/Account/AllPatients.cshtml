@model IEnumerable<hospitalwebapp.Models.PatientAccount>

@{
    ViewBag.Title = "AllPatients";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>All Patients</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
