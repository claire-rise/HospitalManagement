@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Home | </title>

    <!-- Bootstrap -->
    <link href="~/Content/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="~/Content/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <!-- NProgress -->
    <link href="~/Content/vendors/nprogress/nprogress.css" rel="stylesheet">
    <!-- jQuery custom content scroller -->
    <link href="~/Content/vendors/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.min.css" rel="stylesheet" />

    <!-- Custom Theme Style -->
    <link href="~/Content/build/css/custom.min.css" rel="stylesheet">

    <style>
      body {
          font-size: 1.2rem;
      }

        .informat {
            margin-left: 8rem;
        }

        .formColor {
            border: solid 2px aqua;
            padding: 2rem;
            font-size:1.2rem;
        }

        .formInputText {
            font-size: 1.2rem;
        }

        .child_menu_font {
            font-size: 1.1rem;
        }

        .RedirectBack {
            margin-left:5rem;
            margin-bottom: 5rem;
        }
    </style>

</head>

<body class="nav-md footer_fixed">
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">
                    <div class="navbar nav_title" style="border: 0;">
                        <a href="/Home/Index" class="site_title"><img class="img-rounded rounded-circle mr-2" width="40" height="40" src="~/Content/images/hospital-logo.jpg" alt="Hospital logo">
                        <span class="text-uppercase font-weight-normal hospital-name-header-color mt-3 text-white" style="font-size: 0.9rem;"><i>Faith-Hills</i></span></a>
                        
                    </div>

                    <div class="clearfix"></div>

                    <!-- menu profile quick info -->
                    <div class="profile clearfix">
                        <div class="profile_pic">
                            <img src="~/Content/build/images/default-user-profile-pic.jpg" alt="..." class="img-circle profile_img">
                        </div>
                        <div class="profile_info">
                            <span class="font-weight-bold">Welcome,</span>

                            @if (Session["StaffId"] != null)
                            {
                                <h2>@Session["Username"].ToString()</h2>
                            }
                            else
                            {
                                <h2>Username</h2>
                            }

                            </div>
                    </div>
                    <!-- /menu profile quick info -->

                    <br />

                    <!-- sidebar menu -->
                    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                        <div class="menu_section">
                            <h3>General</h3>
                            <ul class="nav side-menu">
                                <li>
                                    <a><i class="fa fa-home"></i> Home <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li><a href="index.html" style="font-size: 1rem;">Dashboard</a></li>
                                        <li><a href="index2.html" style="font-size: 1rem;">View Profile</a></li>
                                    </ul>
                                </li>
                                <li>
                                    <a><i class="fa fa-edit"></i> Forms <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li><a href="form.html" style="font-size: 1rem;">Register Patient</a></li>
                                        <li><a href="form_advanced.html" style="font-size: 1rem;">Register Administrator</a></li>
                                        <li><a href="/Employees/Create" style="font-size: 1rem;">Register Staff</a></li>

                                    </ul>
                                </li>
                                <li>
                                    <a><i class="fa fa-desktop"></i> Views <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li><a href="general_elements.html" style="font-size: 1rem;">All Staff</a></li>
                                        <li><a href="general_elements.html" style="font-size: 1rem;">All Patients</a></li>
                                        <li><a href="media_gallery.html" style="font-size: 1rem;">Mailbox</a></li>
                                        <li><a href="typography.html" style="font-size: 1rem;">Feedback</a></li>
                                    </ul>
                                </li>
                                <li>
                                    <a><i class="fa fa-table"></i> Tasks <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li><a href="tables.html" style="font-size: 1rem;">Patients Records</a></li>
                                        <li><a href="tables_dynamic.html" style="font-size: 1rem;">Assign Patients</a></li>
                                    </ul>
                                </li>
                                <li>
                                    <a><i class="fa fa-user"></i> Doctor <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li><a href="chartjs.html" style="font-size: 1rem;">List of Doctors</a></li>
                                        <li><a href="chartjs2.html" style="font-size: 1rem;">Assigned Doctors</a></li>
                                    </ul>
                                </li>
                                <li>
                                    <a><i class="fa fa-user"></i> Nurse <span class="fa fa-chevron-down"></span></a>

                                </li>
                                <li>
                                    <a><i class="fa fa-user"></i> Reception <span class="fa fa-chevron-down"></span></a>

                                </li>
                                <li>
                                    <a><i class="fa fa-user"></i> Pharmacy <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li><a href="chartjs.html" style="font-size: 1rem;">View Reports</a></li>

                                    </ul>
                                </li>
                                <li>
                                    <a><i class="fa fa-user"></i> Medicine <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li><a href="chartjs.html" style="font-size: 1rem;">Add Drug Category</a></li>
                                        <li><a href="chartjs2.html" style="font-size: 1rem;">Add Medicine </a></li>
                                    </ul>
                                </li>
                                <li>
                                    <a><i class="fa fa-tag"></i> Laboratory <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li><a href="chartjs.html" style="font-size: 1rem;">Add Lab Category</a></li>
                                        <li><a href="chartjs2.html" style="font-size: 1rem;">Add Lab Test</a></li>
                                    </ul>
                                </li>
                                <li>
                                    <a><i class="fa fa-user"></i> Account <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li><a href="chartjs.html" style="font-size: 1rem;">View Reports</a></li>

                                    </ul>
                                </li>
                                <li>
                                    <a><i class="fa fa-cogs"></i> Settings <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li><a href="#" style="font-size: 1rem;">Users Privileges</a></li>
                                        <li><a href="#" style="font-size: 1rem;">Department Settings</a></li>
                                        <li><a href="#" style="font-size: 1rem;">Users Logs</a></li>
                                    </ul>
                                </li>

                            </ul>
                        </div>


                    </div>
                    <!-- /sidebar menu -->
                    <!-- /menu footer buttons -->
                    <div class="sidebar-footer hidden-small">

                        <a data-toggle="tooltip" data-placement="top" title="Settings">
                            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
                        </a>
                        <a data-toggle="tooltip" data-placement="top" title="FullScreen">
                            <span class="glyphicon glyphicon-fullscreen" aria-hidden="true"></span>
                        </a>
                        <a data-toggle="tooltip" data-placement="top" title="Lock">
                            <span class="glyphicon glyphicon-eye-close" aria-hidden="true"></span>
                        </a>
                        <form action="/Account/Logout" method="post">
                            <a data-toggle="tooltip" data-placement="top" title="Logout" href="/Home/Login">
                                <span class="glyphicon glyphicon-off" aria-hidden="true"></span>
                            </a>
                        </form>
                    </div>
                    <!-- /menu footer buttons -->
                </div>
            </div>

            <!-- top navigation -->
            <div class="top_nav">
                <div class="nav_menu">
                    <div class="nav toggle">
                        <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                    </div>
                    <nav class="nav navbar-nav">
                        <ul class=" navbar-right">
                            <li class="nav-item dropdown open" style="padding-left: 15px;">
                                <a href="javascript:;" class="user-profile dropdown-toggle" aria-haspopup="true" id="navbarDropdown" data-toggle="dropdown" aria-expanded="false">
                                    <img src="~/Content/build/images/default-user-profile-pic.jpg" alt="">
                                    <span class="font-weight-bold">
                                        @if (Session["StaffId"] != null)
                                        {
                                        <span>@Session["Username"].ToString()</span>
                                        }
                                        else
                                        {
                                            <span>Username</span>
                                        }
                                    </span>
                                </a>
                                <div class="dropdown-menu dropdown-usermenu pull-right" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="javascript:;"> Profile</a>
                                    @*<a class="dropdown-item" href="/Account/Logout"><i class="fa fa-sign-out pull-right"></i> Log Out</a>*@
                                    @Html.ActionLink("Logout", "Logout", "Account")
                                    @*<h4>@Html.ActionLink("Logout", "Logout", "Account")</h4>*@
                                </div>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            <!-- /top navigation -->
            <!-- page content -->
            <div class="right_col" role="main">
                <!-- top tiles -->
                <div class="row" style="display: inline-block;">
                    <div class="tile_count">
                        <div class="col-md-4 col-sm-6  tile_stats_count">
                            <span class="count_top green"><i class="fa fa-user"></i> Total Patients</span>
                            <div class="count green">250</div>
                            <span class="count_bottom blue"><i class="green">4% </i> From last Week</span>
                        </div>
                        <div class="col-md-4 col-sm-6  tile_stats_count">
                            <span class="count_top text-warning"><i class="fa fa-clock-o"></i> Total Appointments</span>
                            <div class="count text-warning">113</div>
                            <span class="count_bottom text-warning"><i class="green"><i class="fa fa-sort-asc"></i>3% </i> From last Week</span>
                        </div>
                        
                        <div class="col-md-4 col-sm-6  tile_stats_count">
                            <span class="count_top text-danger"><i class="fa fa-user"></i> Total Emergency</span>
                            <div class="count text-danger">7</div>
                            <span class="count_bottom text-danger"><i class="green"><i class="fa fa-sort-asc"></i>34% </i> From last Week</span>
                        </div>

                    </div>
                </div>

                @RenderBody()

               



            </div>
            <!-- /page content -->
            <!-- footer content -->
            <footer class="position-relative">
                <div class="pull-right">
                    Hospital Management Application - Powered by<a href="http://www.thehatch.co"><i class="ml-2">TheHatch Academy</i></a>
                </div>
                <div class="clearfix"></div>
            </footer>
            <!-- /footer content -->
        </div>
    </div>

    <!-- jQuery -->
    <script src="~/Content/vendors/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="~/Content/vendors/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- FastClick -->
    <script src="~/Content/vendors/fastclick/lib/fastclick.js"></script>
    <!-- NProgress -->
    <script src="~/Content/vendors/nprogress/nprogress.js"></script>
    <!-- jQuery custom content scroller -->
    <script src="~/Content/vendors/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.concat.min.js"></script>

    <!-- Custom Theme Scripts -->
    <script src="~/Content/build/js/custom.min.js"></script>
    <!-- Chart.js -->
    <script src="~/Content/vendors/Chart.js/dist/Chart.min.js"></script>
    <!-- gauge.js -->
    <script src="~/Content/vendors/gauge.js/dist/gauge.min.js"></script>
    <!-- bootstrap-progressbar -->
    <script src="~/Content/vendors/bootstrap-progressbar/bootstrap-progressbar.min.js"></script>
    <!-- iCheck -->
    <script src="~/Content/vendors/iCheck/icheck.min.js"></script>
    <!-- Skycons -->
    <script src="~/Content/vendors/skycons/skycons.js"></script>
