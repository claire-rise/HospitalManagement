
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<div class="container mynewlogin-mode">


    <!-- rgba( 3, 52, 93 ,0.5) -->
    <div class="row">

        <div class="col-sm-12 col-md-8 justify-content-center login-frame mx-auto">


            <div class="container col-sm-12 col-md-8">

                <form action="" method="post" class="form-group">

                    <!-- Div to render request on password reset -->
                    <div class="password-reset-response text-success">

                    </div>

                    <div>
                        <h2 class="font-weight-bold" style="color: black">Forgot Your Password?</h2>
                        <p style="font-size: 0.7em;" class="text-info"><strong>We've got you covered! Please provide your email below and we'll send you a link to reset your password</strong></p>
                    </div>


                    <!-- Email address textbox -->
                    <div class="input-group mt-4 mb-3 col-xs-12 col-sm-12 col-md-12 col-lg-12">

                        <div class="input-group-prepend mt-3 mb-3">
                            <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                        </div>
                        <input type="email" class="form-control form-control-user txt-email mt-3 mb-3" id="login-email" aria-describedby="emailHelp" placeholder="Email address" required="">
                    </div>


                    <div>
                        <a href="" class="btn  col-10 btn-primary btn-user btn-block mx-auto" id="reset-password" style="border-radius: 15px">
                            Reset Password
                        </a>
                    </div>

                    <hr>

                    <div class="text-center">
                        <a class="small" href="" data-toggle="modal" data-target="#userRegisterModal">Create an Account?</a>
                    </div>

                    <div class="text-center">
                        <a class="small" href="/Account/Login">Already have an account? Login!</a>
                    </div>


                </form>

            </div>


        </div>


    </div>


</div>
